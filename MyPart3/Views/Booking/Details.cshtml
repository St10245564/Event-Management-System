@model MyPart3.Models.Booking
@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Event
        </dt>
        <dd class="col-sm-10">
            @Model.Event.Name
        </dd>
        <dt class="col-sm-2">
            Venue
        </dt>
        <dd class="col-sm-10">
            @Model.Venue.Name
        </dd>
        <dt class="col-sm-2">
            Booking Date
        </dt>
        <dd class="col-sm-10">
            @Model.BookingDate.ToShortDateString()
        </dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
